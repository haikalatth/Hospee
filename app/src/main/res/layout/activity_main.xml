<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xirpl303122130.hospee.MainActivity"
    android:background="@android:color/holo_red_dark">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/maps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/imageButton19" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/darah"
        android:id="@+id/imageButton22"
        android:layout_alignTop="@+id/imageButton21"
        android:layout_toRightOf="@+id/imageButton19"
        android:layout_toEndOf="@+id/imageButton19" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/penyakit"
        android:layout_marginTop="81dp"
        android:id="@+id/bpenyakit"
        android:layout_below="@+id/imageButton19"
        android:layout_toLeftOf="@+id/imageButton19"
        android:layout_toStartOf="@+id/imageButton19" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/food"
        android:id="@+id/imageButton21"
        android:layout_alignTop="@+id/bpenyakit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Lokasi"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton19"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7"
        android:backgroundTint="@android:color/background_light" />

    <TextView
        android:text="Info Gizi"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView9" />

    <TextView
        android:text="Info Penyakit"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/bpenyakit"
        android:layout_alignRight="@+id/bpenyakit"
        android:layout_alignEnd="@+id/bpenyakit" />

    <TextView
        android:text="Golongan Darah"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/imageButton22"
        android:layout_alignStart="@+id/imageButton22" />
</RelativeLayout>
